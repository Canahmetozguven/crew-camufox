# Crew-Camufox Environment Configuration Template
# Copy this file to .env and customize for your environment

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================

# Application Mode
DEBUG=false
LOG_LEVEL=INFO
LOG_TO_FILE=true
LOG_ROTATION=true

# Directories
OUTPUT_DIR=research_outputs
LOGS_DIR=logs
TEMP_DIR=temp

# Performance Settings
MAX_CONCURRENT_MISSIONS=3
MISSION_TIMEOUT=7200

# API Server Settings
API_HOST=localhost
API_PORT=8000
API_WORKERS=1

# ============================================================================
# OLLAMA/LLM SETTINGS
# ============================================================================

# Ollama Configuration
OLLAMA_MODEL=magistral:latest
OLLAMA_BASE_URL=http://localhost:11434
BROWSER_MODEL=granite3.3:8b
OLLAMA_TIMEOUT=30
OLLAMA_MAX_RETRIES=3
OLLAMA_TEMPERATURE=0.1

# ============================================================================
# SEARCH ENGINE SETTINGS  
# ============================================================================

# Google Search API (Optional - for enhanced search capabilities)
GOOGLE_API_KEY=your_google_api_key_here
GOOGLE_CSE_ID=your_custom_search_engine_id_here

# Bing Search API (Optional)
BING_API_KEY=your_bing_api_key_here

# SerpAPI (Optional - alternative search provider)
SERP_API_KEY=your_serp_api_key_here

# Search Configuration
MAX_SOURCES=15
REQUEST_DELAY=1.0
SEARCH_TIMEOUT=30
ENABLE_ACADEMIC_SEARCH=true
ENABLE_DIRECT_BROWSER=true

# ============================================================================
# BROWSER/CAMOUFOX SETTINGS
# ============================================================================

# Browser Configuration
BROWSER_HEADLESS=true
BROWSER_STEALTH=true
BROWSER_UA_ROTATION=true
BROWSER_PROXY_ROTATION=false

# Browser Performance
BROWSER_PAGE_TIMEOUT=30
BROWSER_NAV_DELAY=2.0
BROWSER_MAX_PAGES=3

# ============================================================================
# CACHING SETTINGS
# ============================================================================

# Cache Configuration  
CACHE_ENABLED=true
CACHE_DEFAULT_TTL=3600
CACHE_SEARCH_TTL=7200
CACHE_MAX_MEMORY_SIZE=1000

# Redis (Optional - for distributed caching)
# REDIS_URL=redis://localhost:6379

# ============================================================================
# DATABASE SETTINGS
# ============================================================================

# Database Configuration
DATABASE_URL=sqlite:///crew_camufox.db
DATABASE_ECHO=false
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10

# For PostgreSQL (example):
# DATABASE_URL=postgresql://user:password@localhost:5432/crew_camufox

# For MySQL (example): 
# DATABASE_URL=mysql://user:password@localhost:3306/crew_camufox

# ============================================================================
# PROXY SETTINGS (Optional)
# ============================================================================

# HTTP/HTTPS Proxy
# HTTP_PROXY=http://proxy.example.com:8080
# HTTPS_PROXY=http://proxy.example.com:8080

# Proxy Authentication
# PROXY_USERNAME=your_username
# PROXY_PASSWORD=your_password

# ============================================================================
# LEGACY SETTINGS (for backward compatibility)
# ============================================================================

# Deprecated - use BROWSER_HEADLESS instead
CAMOUFOX_HEADLESS=true

# Deprecated - use ResearchConfig.get_config() instead
RESEARCH_DEPTH=3

# Deprecated - use OLLAMA_MAX_RETRIES instead
MAX_RETRIES=3

# Deprecated - use OLLAMA_TIMEOUT instead
TIMEOUT=30

# Deprecated - use BROWSER_UA_ROTATION instead
USER_AGENT_ROTATION=true

# Deprecated - use BROWSER_PROXY_ROTATION instead
PROXY_ENABLED=false
PROXY_SERVER=""
PROXY_USERNAME=""
PROXY_PASSWORD=""

# Deprecated - use SEARCH_TIMEOUT and related settings instead
ENABLE_FACT_CHECK=true
